<script>
Highcharts.setOptions({
    global: {
        useUTC: false
    }
});
$(function () {
    $('#chart').highcharts({
        chart: {
            backgroundColor:'transparent',
            type: 'spline',
            zoomType: 'x'
        },
        title: {
            text: 'Current Temp: {{"%.2f F" % current_t}}'
        },
        xAxis: {
            type: 'datetime',
            //title: {
            //    text: 'Times'
            //}
            dateTimeLabelFormats: { // don't display the dummy year
                second: '%I:%M:%S %p',
                minute: '%I:%M %p',
                hour: '%I:%M %p',
                day: '%m / %d',
                week: '%m / %d',
                month: '%m / %d / %y',
                year: '%Y'
            },
        },
        yAxis: {
            title: {
                text: 'Temperature (F)'
            },
        },
        legend: { enabled: false },
            plotOptions: {
                area: {
                    fillColor: {
                        linearGradient: {
                            x1: 0,
                            y1: 0,
                            x2: 0,
                            y2: 1
                        },
                        stops: [
                            [0, Highcharts.getOptions().colors[2]],
                            [1, Highcharts.Color(Highcharts.getOptions().colors[2]).setOpacity(0).get('rgba')]
                        ]
                    },
                    marker: {
                        radius: 2
                    },
                    lineWidth: 1,
                    states: {
                        hover: {
                            lineWidth: 1
                        }
                    },
                    threshold: null
                }
            },
        series: [{
            type: 'area',
            name: "Temperature",
            color: '#FF9900',
            data: [
                {{ hs_timeseries }}
                //[Date.UTC(1970, 9, 21), 0],
                //[Date.UTC(1970, 10, 4), 0.28]
            ]
        }]
    });
});
</script>
